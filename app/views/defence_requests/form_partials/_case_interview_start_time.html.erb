<div class="form-group">
  <fieldset class="inline">
      <%= t('interview_start_time') %>
      <span class='hint block'><%= t('time_hint') %></span>

      <div class="date_field_wrapper">
        <%= f.label :interview_start_time_hour, t('hour') %>
        <%= f.text_field :interview_start_time_hour, class: 'hour text-field' %>
      </div>
      <div class="date_field_wrapper">
        <%= f.label :interview_start_time_minute, t('min') %>
        <%= f.text_field :interview_start_time_minute, class: 'minute text-field' %>
      </div>
  </fieldset>
</div>
